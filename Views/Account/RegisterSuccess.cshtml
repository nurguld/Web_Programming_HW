

<div class="text-center mt-5">
    <h2>Registration Completed!</h2>
    <p>Your account has been created successfully.</p>

    @if (TempData["ConfirmationLink"] is string link)
    {
        <p>
            Click to confirm: <br />
            <a href="@link">@link</a>
        </p>
    }

    <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">
        Go to Login Page
    </a>
</div>
